<% include header.ejs %>
<section id="login-container">
  <div class="row">
    <div id="login-wrapper" class="col-md-3">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">登录</h3>
        </div>
        <div class="panel-body">
          <p> 登录后方可继续访问</p>
          <form role="form" action="" method="post" class="form-horizontal">
            <div class="form-group">
              <div class="col-md-12">
                <input type="text" id="name" name="name" placeholder="用户名" autofocus="" class="form-control"><i class="glyphicon glyphicon-user"></i>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-12">
                <input type="password" id="password" name="password" placeholder="密码" class="form-control"><i class="glyphicon glyphicon-lock"></i><a href="/admin/user/forget" class="help-block">忘记密码?</a>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-12">
                <button type="submit" class="btn btn-primary btn-block">登录</button>
                <hr><a href="<%=projectDir%>/user/register" class="btn btn-default btn-block">还不是用户? 注册</a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
<% include footer.ejs %>

